<UserControl x:Class="Postgirl.Presentation.Views.RequestDocument.Parts.RequestHeadersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- ADD HEADER BUTTON -->
		<Button Content="+ Add Header"
		        Command="{Binding AddHeaderCommand}"
		        HorizontalAlignment="Left"
		        Margin="0,0,0,8"/>

		<!-- HEADERS GRID -->
		<DataGrid Grid.Row="1"
		          ItemsSource="{Binding RequestHeaders}"
		          AutoGenerateColumns="False"
		          CanUserAddRows="False"
		          VerticalScrollBarVisibility="Auto">

			<DataGrid.Columns>

				<!-- ENABLE -->
				<DataGridTemplateColumn Width="40">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<CheckBox IsChecked="{Binding IsEnabled}"
							          IsEnabled="{Binding CanEdit}" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<!-- KEY -->
				<DataGridTextColumn
					Header="Header"
					Binding="{Binding Key}"
					Width="200"
					ElementStyle="{StaticResource HeaderValueTextStyle}"
					EditingElementStyle="{StaticResource HeaderValueEditStyle}" />

				<!-- VALUE -->
				<DataGridTextColumn
					Header="Value"
					Binding="{Binding Value}"
					Width="*"
					ElementStyle="{StaticResource HeaderValueTextStyle}"
					EditingElementStyle="{StaticResource HeaderValueEditStyle}" />

				<!-- REMOVE -->
				<DataGridTemplateColumn Width="40">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button Content="✖"
							        Command="{Binding RemoveCommand}"
							        IsEnabled="{Binding CanEdit}"
							        ToolTip="Remove header"
							        Padding="2"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

			</DataGrid.Columns>
		</DataGrid>

	</Grid>
</UserControl>