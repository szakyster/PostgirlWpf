<Window x:Class="Postgirl.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Postgirl.Presentation.Views"
        Title="Postgirl" Height="600" Width="1024">

	<DockPanel>

		<!-- Top bar -->
		<ToolBar DockPanel.Dock="Top">
			<Button Content="+ New"
			        Command="{Binding NewTabCommand}" />
		</ToolBar>

		<!-- Main content -->
		<Grid>
			<Grid.ColumnDefinitions>
				<!-- Left sidebar -->
				<ColumnDefinition Width="340" />
				<!-- Main editor -->
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<!-- ===================== -->
			<!-- Left sidebar (container) -->
			<!-- ===================== -->
			<Border Grid.Column="0"
			        Background="#1E1E1E"
			        BorderBrush="#333"
			        BorderThickness="0,0,1,0">

				<DockPanel>

					<!-- Sidebar header (később toolbar is lehet) -->
					<TextBlock DockPanel.Dock="Top"
					           Text="Requests"
					           FontWeight="SemiBold"
					           Foreground="White"
					           Padding="10"
					           Opacity="0.8" />

					<!-- Placeholder for lists -->
					<ScrollViewer VerticalScrollBarVisibility="Auto" Background="AliceBlue">
						<StackPanel>

							<!-- Saved Requests placeholder -->
							<Expander Header="Saved Requests"
							          IsExpanded="True"
							          Margin="4">
								<TextBlock Text="(saved requests will be here)"
								           Foreground="Gray"
								           Margin="8" />
							</Expander>

							<!-- History placeholder -->
							<Expander Header="History"
							          IsExpanded="True"
							          Margin="4">
								<views:HistoryView />
							</Expander>

						</StackPanel>
					</ScrollViewer>

				</DockPanel>
			</Border>

			<!-- ===================== -->
			<!-- Tabs / main content -->
			<!-- ===================== -->
			<TabControl Grid.Column="1"
			            ItemsSource="{Binding Documents}"
		            SelectedItem="{Binding ActiveDocument}">

			<TabControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Title}" />
				</DataTemplate>
			</TabControl.ItemTemplate>

			<TabControl.ContentTemplate>
				<DataTemplate>
					<views:RequestDocumentView />
				</DataTemplate>
			</TabControl.ContentTemplate>

		</TabControl>
		</Grid>
	</DockPanel>
</Window>