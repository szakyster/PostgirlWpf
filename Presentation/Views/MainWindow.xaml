<Window x:Class="Postgirl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Postgirl.Views"
        Title="Postgirl" Height="600" Width="900">

	<DockPanel>

		<!-- Top bar -->
		<ToolBar DockPanel.Dock="Top">
			<Button Content="+ New"
			        Command="{Binding NewTabCommand}" />
		</ToolBar>

		<!-- Tabs -->
		<TabControl ItemsSource="{Binding Documents}"
		            SelectedItem="{Binding ActiveDocument}">

			<TabControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Title}" />
				</DataTemplate>
			</TabControl.ItemTemplate>

			<TabControl.ContentTemplate>
				<DataTemplate>
					<views:RequestDocumentView />
				</DataTemplate>
			</TabControl.ContentTemplate>

		</TabControl>
	</DockPanel>
</Window>