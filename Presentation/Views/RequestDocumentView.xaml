<UserControl x:Class="Postgirl.Presentation.Views.RequestDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:parts="clr-namespace:Postgirl.Presentation.Views.RequestDocument.Parts"
            >

		<Grid Margin="10">
	    <Grid.RowDefinitions>
	      <RowDefinition Height="Auto"/>
	      <RowDefinition Height="1*"/>
	      <RowDefinition Height="1*"/>
	      <RowDefinition Height="Auto"/>
	    </Grid.RowDefinitions>

	    <!-- Request line -->
	    <parts:RequestLineView Grid.Row="0"/>
		<parts:RequestLineView Grid.Row="0"/>
		<parts:RequestTabsView Grid.Row="1"/>
		<parts:ResponseView Grid.Row="2"/>
		<parts:StatusBarView Grid.Row="3"/>
	</Grid>
</UserControl>
